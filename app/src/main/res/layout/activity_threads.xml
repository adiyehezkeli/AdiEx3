<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/threads_create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="threadsCreate"
            android:text="create"
            android:layout_gravity="left"
            />

        <Button
            android:id="@+id/threads_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="threadsStart"
            android:text="start"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/threads_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="threadsCancel"
            android:text="cancel"
            android:layout_gravity="right"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text_layout">
        <TextView
            android:id="@+id/threads_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:paddingTop="60dp"
            android:paddingBottom="60dp"
            />
    </LinearLayout>
</RelativeLayout>